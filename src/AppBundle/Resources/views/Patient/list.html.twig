{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong> LIST Implant </strong>

                             <span style="float:right;">{{ implant.ListSize }} Implant</span>

                </div>

                <input type="hidden" id="hospitalId" value="{{ implant.HospitalId }}">
                <input type="hidden" id="searchkey" value="{{ implant.SearchKey }}">
                <!-- /.panel-heading -->
                <div class="panel-body" style="overflow-x: scroll;">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-sm-1">
                                <div class="dataTables_length" id="dataTables-example_length">
                                    <label>
                                        <select name="dataTables-example_length" id="limit" aria-controls="dataTables-example"
                                                class="custom-select form-control input-sm">
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="30">30</option>
                                            <option value="40">40</option>
                                        </select>
                                    </label>
                                </div>
                            </div>

                            <div class="col-sm-2">
                                <div class="dataTables_length" id="dataTables-example_length">
                                    <label>
                                        <select name="dataTables-example_length" aria-controls="dataTables-example"
                                                class="custom-select-hospital form-control input-sm">
                                            <option value="null">Hospital</option>
                                            {% for hospital  in hospitals %}

                                            <option value="{{ hospital.ID }}"{% if implant.HospitalId == hospital.ID %} selected {% endif %}>{{ hospital.NameOfHosp }}</option>
                                            {% endfor %}
                                        </select>
                                    </label>
                                </div>
                            </div>

                            <div class="col-sm-3">
                                <div class="span12">
                                    <form id="custom-search-form" class="form-search form-horizontal pull-right">
                                        <div class="form-group input-group" id="custom-search-form">
                                            {% if implant.SearchKey is not null and implant.SearchKey is not empty and implant.SearchKey != "search" %}
                                                <button style="float: left; margin-right: 10px" type="button close"  aria-label="Close" class="btn btn-default">{{ implant.SearchKey }} <i
                                                            class="fa fa-remove"></i></button>
                                            {% endif %}
                                            <input type="text" class="form-control search-inp" value="search" placeholder="Search">
                                            <span class="input-group-btn">
                                                <button class="btn searchButton btn-default" type="button"><i
                                                            class="fa fa-search"></i>
                                                </button>
                                            </span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="dataTables-example"  class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                    <thead>
                                    <tr>
                                        <th>Edit</th>
                                        <th>Implant Number</th>
                                        <th>Implant Date</th>
                                        <th>Implant Center</th>
                                        <th>City</th>
                                        <th>Patient ID</th>
                                        <th>Patient Name </th>
                                        <th>HVADPumpID </th>
                                        <th>Quantity</th>
                                        <th>Patient Address</th>
                                        <th>Patient Call Numbers</th>
                                        <th>Status Date</th>
                                        <th>Stayed on device (days) </th>
                                        <th>Status</th>
                                    </thead>
                                    <tbody>
                                    {% for implant  in implant.Content %}

                                        <tr>
                                            <td>     <button type="button"
                                                             onclick="location.href='{{ url("patient_edit",{ 'id' :implant.PatientID }) }}';"
                                                             class="edit btn btn-primary glyphicon glyphicon-pencil"></button> </td>
                                            <td>{{ implant.ID }}</td>
                                            <td>{{ implant.ImplantDate }}</td>
                                            <td>{{ implant.HospitalCenter }}</td>
                                            <td>{{ implant.HospitalCenter }}</td>
                                            <td>{{ implant.PatientID }}</td>
                                            <td>{{ implant.FirstnameOfPat }}</td>
                                            <td>{{ implant.HVADPumpID }}</td>
                                            <td>{{ implant.Qty }}</td>
                                            <td>{{ implant.AdressOfPat }}</td>
                                            <td>
                                                {% for phone  in implant.PhoneNumbers %}


                                                {% if loop.last %}
                                                    {{ phone.PhoneNumber }}
                                                {% else %}
                                                    {{ phone.PhoneNumber }} -
                                                {% endif %}
                                                {% endfor %}
                                            </td>
                                            <td>{{ implant.StatusDate }}</td>
                                            <td>{{ implant.StayDurationOfDev }}</td>
                                            <td>{{ implant.PatientStatus }}</td>

                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.table-responsive -->
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                <ul class="pagination">
                                    {% for i in 1..(implant.ListSize / implant.Limit)|round(0, 'ceil') %}
                                    <li data-id="{{ i }}" class="paginate_button" aria-controls="dataTables-example"
                                        tabindex="0">
                                        {% if implant.SearchKey is not null %}
                                            <a href="{{ url("patient_list",{'month' :0 , 'page' :i-1 , 'limit':implant.Limit , 'searchKey':implant.SearchKey, 'hospitalId' : implant.HospitalId }) }}">{{ i }} </a></li>
                                        {% else %}
                                            <a href="{{ url("patient_list",{'month' : 0 ,'page' :i-1 , 'limit':implant.Limit , 'hospitalId' : implant.HospitalId }) }}">{{ i }} </a></li>
                                        {% endif %}


                                    {% endfor %}



                                </ul>



                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        function getParameterByName(name, url) {
            if (!url) {
                url = window.location.href;
            }
            name = name.replace(/[\[\]]/g, "\\$&");
            var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
                results = regex.exec(url);
            if (!results) return null;
            if (!results[2]) return '';
            return decodeURIComponent(results[2].replace(/\+/g, " "));
        }


        var page = getParameterByName('page');
        var limit = getParameterByName('limit');

        $(document).ready(function () {
            var searchKey = $(".search-inp").val();
            var hospitalId = $('.custom-select-hospital').val();
            var limit = $('#limit').val();
            if(page == 0 || page == null){
                $( ".paginate_button[data-id='1']" ).addClass('active');
            }else{
                var pageNum = (page*1)+1
                $( ".paginate_button[data-id='"+pageNum+"']" ).addClass('active');
            }

            if(limit != null){
                $(".custom-select option[value='"+limit+"']" ).prop('selected',true);
            }
            $('.custom-select').on('change', function() {
                searchKey =  $(".search-inp").val();
                hospitalId = $('.custom-select-hospital').val();
                    window.location.href = "?limit="+this.value+"&searchKey="+searchKey+"&hospitalId="+hospitalId;
            })
            $('.custom-select-hospital').on('change', function() {
                searchKey =  $(".search-inp").val();
                hospitalId = $('.custom-select-hospital').val();
                limit = $('#limit').val();
                window.location.href = "?limit="+limit+"&searchKey="+searchKey+"&hospitalId="+hospitalId;
            })
            var searchEvent = function () {
                var search = $(".search-inp").val();
                window.location.href = "?searchKey="+search;
            }

            $(".search-inp").keypress(function() {
                if (event.which == 13) searchEvent();
            });
            $('.searchButton').click(searchEvent);




        });


    </script>
{% endblock %}