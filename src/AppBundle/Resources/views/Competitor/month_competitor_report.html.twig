{% extends 'base.html.twig' %}
{% block content %}

    <div class="row">
        <div class="col-lg-12">
            <div class="row" style="margin-bottom: 10px">
                <div  class="col-md-12">
                    <div class="col-md-7"></div>
                    <div class="col-md-2" id="dataTables-example_length" class="">

                        <select name="dataTables-example_length" id="month" aria-controls="dataTables-example"
                                class="form-control">
                            <option value="0">Month</option>
                            <option value="1" {% if month == 1 %}selected{% endif %}>Ocak</option>
                            <option value="2"{% if month == 2 %}selected{% endif %}>Şubat</option>
                            <option value="3"{% if month == 3 %}selected{% endif %}>Mart</option>
                            <option value="4"{% if month == 4 %}selected{% endif %}>Nisan</option>
                            <option value="5"{% if month == 5 %}selected{% endif %}>Mayıs</option>
                            <option value="6"{% if month == 6 %}selected{% endif %}>Haziran</option>
                            <option value="7"{% if month == 7 %}selected{% endif %}>Temmuz</option>
                            <option value="8"{% if month == 8 %}selected{% endif %}>Ağustos</option>
                            <option value="9"{% if month == 9 %}selected{% endif %}>Eylül</option>
                            <option value="10"{% if month == 10 %}selected{% endif %}>Ekim</option>
                            <option value="11"{% if month == 11 %}selected{% endif %}>Kasım</option>
                            <option value="12"{% if month == 12 %}selected{% endif %}>Aralık</option>
                        </select>
                    </div>
                    <div class="col-md-2" id="dataTables-example_length">
                        <select name="dataTables-example_length" id="year" aria-controls="dataTables-example"
                                class="form-control input-sm">
                            <option value="0">Year</option>
                            <option value="2010" {% if year == 2010 %}selected{% endif %}>2010</option>
                            <option value="2011"{% if year == 2011 %}selected{% endif %}>2011</option>
                            <option value="2012"{% if year == 2012 %}selected{% endif %}>2012</option>
                            <option value="2013"{% if year == 2013 %}selected{% endif %}>2013</option>
                            <option value="2014"{% if year == 2014 %}selected{% endif %}>2014</option>
                            <option value="2015"{% if year == 2015 %}selected{% endif %}>2015</option>
                            <option value="2016"{% if year == 2016 %}selected{% endif %}>2016</option>
                            <option value="2017"{% if year == 2017 %}selected{% endif %}>2017</option>
                            <option value="2018"{% if year == 2018 %}selected{% endif %}>2018</option>
                        </select>


                    </div>
                    <div class="col-md-1">  <button id="filter" type="button">Filter</button></div>

                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong> Implant Report <span style="color: red">({{ year }})</span> </strong>

                </div>
                {% set break = false %}
                <div class="panel-body">

                    <div class="row">
                        <div class="col-lg-1"></div>
                        <div class="col-lg-10">
                            <table class="table-condensed table-bordered table-striped" style="margin: 0 auto">
                                <thead>
                                <tr>
                                    <th>Hastane</th>

                                    {% if month == 1 %}<th>Ocak</th>{% endif %}
                                    {% if month == 2 %}<th>Şubat</th>{% endif %}
                                    {% if month == 3 %}<th>Mart</th>{% endif %}
                                    {% if month == 4 %}<th>Nisan</th>{% endif %}
                                    {% if month == 5 %}<th>Mayıs</th>{% endif %}
                                    {% if month == 6 %}<th>Haziran</th>{% endif %}
                                    {% if month == 7 %}<th>Temmuz</th>{% endif %}
                                    {% if month == 8 %}<th>Ağustos</th>{% endif %}
                                    {% if month == 9 %}<th>Eylül</th>{% endif %}
                                    {% if month == 10 %}<th>Ekim</th>{% endif %}
                                    {% if month == 11 %}<th>Kasım</th>{% endif %}
                                    {% if month == 12 %}<th>Aralık</th>{% endif %}

                                </tr>
                                </thead>
                                <tbody>
                                 {% for hospital in hospitals %}
                                <tr class="tableMonth">
                                    <td>{{ hospital.HospitalName }}</td>


                                    <td style="color: red; text-align: right">{{ hospital.Count }}</td>
                                </tr>
                                {% endfor %}

                                 <tr>
                                     <td>Toplam</td>

                                     <td style="background-color: black; color: #fff; text-align: right">{{ totalCount }}</td>
                                 </tr>



                                </td>

                                </tbody>
                            </table>
                        </div>
                        <div class="col-lg-1"></div>
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <!-- /.col-lg-12 -->
    </div>
{% endblock %}


{% block javascripts %}
    <script>
        $('#filter').on('click', function() {

            var year =  $("#year").val();
            var  month =  $("#month").val();
            window.location.href = "/competitor/month/"+year+"/"+month;
        })
    </script>

{% endblock %}












