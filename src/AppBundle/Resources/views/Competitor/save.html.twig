{% block javascripts %}
    <script>
        var Forms={
            Link:{
                Self:$('#hospital-add'),
                Bind:function () {
                    Forms.Link.Self.on('submit',function (e) {
                        e.preventDefault();

                        var phoneNumbers = [];
                        $(".custom-competitor").each(function () {
                            var count = $(this).find('.count').val();



                            if(count != "") {


                                phoneNumbers.push({
                                    'ID': null,
                                    'hospitalId' :  $(this).find('.hospitalId').val(),
                                    'month' : $(this).find('input[name ="month"]').val(),
                                    'year' : $(this).find('.year').val(),
                                    'count' : count
                                });

                            }

                        });




                        $.post('{{ url('ajax_competitor_add') }}',{data:phoneNumbers},function (result) {
                            if(result.success)
                            {
                                setTimeout(function () {
                                    location.reload();
                                },2000);
                                $('.alert-success').slideDown();
                            }else {
                                $('.alert-danger').slideDown();
                            }
                        })
                    })
                }
            },

            Bind:function () {
                Forms.Link.Bind();
            }
        }

        $(document).ready(function () {

            Forms.Bind();

        });


    </script>
{% endblock %}